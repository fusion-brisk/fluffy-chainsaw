{
  "manifest_version": 3,
  "name": "EProductSnippet Parser",
  "version": "1.4.0",
  "key": "",
  "update_url": "https://raw.githubusercontent.com/fusion-brisk/fluffy-chainsaw/main/extension/updates.xml",
  "description": "Парсит сниппеты поисковой выдачи Яндекса и отправляет в Figma плагин. Клик по иконке = отправка.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "nativeMessaging"
  ],
  "host_permissions": [
    "http://localhost:*/*",
    "http://127.0.0.1:*/*",
    "https://*.yandex.ru/*",
    "https://*.yandex.com/*",
    "https://yandex.ru/*",
    "https://yandex.com/*",
    "https://*.ya.ru/*",
    "https://ya.ru/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16-gray.png",
      "48": "icons/icon48-gray.png",
      "128": "icons/icon128-gray.png"
    },
    "default_title": "Откройте страницу Яндекса"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
